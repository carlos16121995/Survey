
@{
    ViewData["Title"] = "Alterar Dados do Usuário";
}
@section Scripts  {
    <script src="~/js/Util.js" type="text/javascript"></script>
    <script src="~/js/Views/Home_AlterarUsuario.js" type="text/javascript"></script>
}

<form>
    <input type="hidden" name="txtId" id="txtId" value="0" />
    <div class="form-group">
        <label for="txtEmail">Informe seu e-mail:</label>
        <input type="email" name="txtEmail" id="txtEmail" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="txtNome">Nome:</label>
        <input type="text" name="txtNome" id="txtNome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="txtSenha">Defina sua senha:</label>
        <input type="password" name="txtSenha" id="txtSenha" class="form-control" />
    </div>
    <div class="form-group">
        <label for="txtSenha2">Confirme sua senha:</label>
        <input type="password" name="txtSenha2" id="txtSenha2" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" name="ckbExcluir" id="ckbExcluir" class="form-check-input" />
        <label class="form-check-label">Não desejo mais usar o sistema. Excluir meu usuário !</label>
    </div>
    <div class="form-inline">
        <button type="button" name="btnAlterar" id="btnAlterar" class="btn btn-success">Confirmar Alteração</button>
        <a href="/Dashboard" role="button" class="btn btn-danger">Cancelar</a>
    </div>
</form>
<div id="divAlerta" class="alert alert-danger" role="alert" style="display:none"></div>


